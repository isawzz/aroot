{
	"editor.tabSize": 2,
	"editor.codeLens": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.dragAndDrop": false,
	"editor.foldingStrategy": "indentation",
	"editor.glyphMargin": false,
	"editor.gotoLocation.alternativeImplementationCommand": "editor.action.goToReferences",
	"editor.gotoLocation.alternativeReferenceCommand": "editor.action.goToTypeDefinition",
	"editor.tabCompletion": "on",
	"editor.wordBasedSuggestionsMode": "allDocuments",
  "editor.fontSize": 22,
  "terminal.integrated.fontSize": 22,
  "debug.console.fontSize": 22,
  "workbench.panel.defaultLocation": "right",
  "workbench.panel.opensMaximized": "never",
  "workbench.editor.enablePreview": false,
	"files.exclude": {
		".*.php": true,
		"**/.*.php": true,
		"z*":true,
		"_o*":true,
		"index.php":true,
		"basinno":true,
		"bg":true,
		"cosensus":true,
		"rechnung":true,
		"easySAFE":true,
		"happy":true,
		"simple":true,
		".g*":false,
	},
	"phpfmt.passes": [
		"PSR2KeywordsLowerCase",
		"PSR2ModifierVisibilityStaticOrder",
		"ReindentSwitchBlocks"
	],
	"phpfmt.exclude": [
		"PSR2SingleEmptyLineAndStripClosingTag",
		"PSR2CurlyOpenNextLine",
		"PSR2LnAfterNamespace",
		"ReindentComments", 
		"StripNewlineWithinClassBody"
	],
	"phpfmt.psr2": false,
	"[php]": {
		"editor.formatOnSave": true,
		"editor.tabSize": 2,
	},
	"phpfmt.php_bin": "C:\\xampp\\php\\php.exe",
	"phpfmt.indent_with_space": 2,
	"phpfmt.cakephp": true,
	"liveServer.settings.CustomBrowser": "chrome",
	"liveServer.settings.fullReload": true,
	"liveServer.settings.port": 5501,
	"liveServer.settings.useWebExt": true,
	// "liveServer.settings.proxy": {
	// 	"enable": true,
	// 	"baseUri": "/",
	// 	"proxyUri": "http://localhost:8080/aroot/",
	// },
	"[yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.bracketPairColorization.enabled": false,
}

